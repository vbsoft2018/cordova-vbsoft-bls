<?xml version="1.0" encoding="utf-8"?>
<plugin
    xmlns="http://www.phonegap.com/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    id="cordova-vbsoft-bls"
    version="0.8.8">

    <name>Bluetooth Serial</name>
    <description>VBSoft BLS Communication Plugin</description>
    <license>Apache 2.0</license>
    <keywords>VBSoft, bluetooth, BLE, BLS</keywords>
    <repo>https://github.com/vbsoft2018/cordova-vbsoft-bls.git</repo>
    <issue>https://github.com/vbsoft2018/cordova-vbsoft-bls/issues</issue>

    <js-module src="www/VBSoftBls.js" name="VBSoftBls">
        <clobbers target="window.VBSoftBls" />
    </js-module>

    <platform name="android">

        <config-file target="res/xml/config.xml" parent="/widget">
            <feature name="VBSoftBls">
                <param name="android-package" value="cn.vbsoft.bls.VBSoftBls"/>
            </feature>
        </config-file>

        <source-file src="src/android/cn/vbsoft/bls/VBSoftBls.java"
            target-dir="src/cn/vbsoft/bls"/>
        <source-file src="src/android/cn/vbsoft/bls/VBSoftBlsService.java"
            target-dir="src/cn/vbsoft/bls"/>

        <config-file target="AndroidManifest.xml" parent="/manifest">
            <uses-permission android:name="android.permission.BLUETOOTH" />
            <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
            <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
        </config-file>

    </platform>

    <platform name="browser">
        <js-module src="src/browser/VBSoftBls.js" name="vbsoftbls_browser">
            <clobbers target="window.VBSoftBls" />
        </js-module>

    </platform>
</plugin>
